<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo redondeado con radio de 8dp -->
    <corners android:radius="8dp" />

    <!-- Gradiente de colores de arriba hacia abajo -->
    <gradient
        android:startColor="@color/button_gradient_start"
        android:endColor="@color/button_gradient_end"
        android:angle="270"/>

    <!-- Borde de 1dp con color gris oscuro -->
    <stroke
        android:width="1dp"
        android:color="@color/button_stroke_color" />

    <!-- Agrega un margen interno de 16dp para dar espacio al texto del botÃ³n -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp" />

</shape>
